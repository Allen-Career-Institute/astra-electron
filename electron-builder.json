{
  "appId": "com.allencareerinstitute.astra-console",
  "productName": "Astra Console",
  "directories": {
    "output": "dist-electron-builder",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "assets/installer/**/*",
    "!**/*.d.ts",
    "!**/*.map",
    "!**/*.ts",
    "!**/*.md",
    "!**/*.log",
    "!**/*.test.*",
    "!**/*.spec.*",
    "!**/test/**",
    "!**/tests/**",
    "!**/__tests__/**",
    "!**/.git/**",
    "!**/.github/**",
    "!**/.vscode/**",
    "!**/.idea/**",
    "!**/coverage/**",
    "!**/docs/**",
    "!**/examples/**",
    "!**/build/**",
    "!**/out/**",
    "!**/node_modules/**",
    "!**/src/**"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "requestedExecutionLevel": "requireAdministrator",
    "icon": "assets/icons/win/icon.ico",
    "publisherName": "ALLEN CAREER INSTITUTE PRIVATE LIMITED",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Astra Console",
    "perMachine": false,
    "deleteAppDataOnUninstall": true,
    "include": "assets/installer/installer.nsh",
    "installerIcon": "assets/icons/win/icon.ico",
    "uninstallerIcon": "assets/icons/win/icon.ico",
    "installerHeaderIcon": "assets/icons/win/icon.ico",
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "uninstallDisplayName": "Astra Console",
    "runAfterFinish": true,
    "menuCategory": "Astra Console",
    "allowElevation": true,
    "installerSidebar": "assets/icons/win/icon.ico",
    "uninstallerSidebar": "assets/icons/win/icon.ico",
    "installerHeader": "assets/icons/win/icon.ico",
    "installerLanguages": ["en"],
    "warningsAsErrors": false,
    "multiLanguageInstaller": false,
    "displayLanguageSelector": false
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icons/mac/icon.icns",
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "category": "public.app-category.productivity",
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "notarize": false,
    "extendInfo": {
      "CFBundleDisplayName": "Astra Console",
      "CFBundleExecutable": "Astra Console",
      "CFBundleIdentifier": "com.allencareerinstitute.astra-console",
      "CFBundleInfoDictionaryVersion": "6.0",
      "CFBundleName": "Astra Console",
      "CFBundlePackageType": "APPL",
      "CFBundleShortVersionString": "1.0.10",
      "CFBundleVersion": "1.0.10",
      "LSMinimumSystemVersion": "10.15.0",
      "NSCameraUsageDescription": "This app requires camera access for streaming",
      "NSMicrophoneUsageDescription": "This app requires microphone access for streaming",
      "NSAppleEventsUsageDescription": "This app needs access to Apple events",
      "NSSystemAdministrationUsageDescription": "This app needs to capture the screen",
      "NSDesktopFolderUsageDescription": "Access to desktop may be needed for screen recording",
      "NSDocumentsFolderUsageDescription": "Access to documents may be needed",
      "NSDownloadsFolderUsageDescription": "Access to downloads may be needed",
      "NSHighResolutionCapable": true,
      "NSRequiresAquaSystemAppearance": false,
      "LSUIElement": false,
      "LSApplicationCategoryType": "public.app-category.productivity"
    }
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icons/png/512x512.png",
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "category": "Utility"
  },
  "publish": {
    "provider": "github",
    "owner": "Allen-Career-Institute",
    "repo": "astra-electron",
    "private": false,
    "releaseType": "release"
  },
  "forceCodeSigning": false,
  "asar": false,
  "buildDependenciesFromSource": true,
  "compression": "maximum",
  "removePackageScripts": true,
  "removePackageKeywords": true,
  "extraResources": [
    {
      "from": ".env.local",
      "to": ".env.local"
    },
    {
      "from": "node_modules/agora-electron-sdk",
      "to": "node_modules/agora-electron-sdk"
    },
    {
      "from": "node_modules/archive-type",
      "to": "node_modules/archive-type"
    },
    {
      "from": "node_modules/buffer",
      "to": "node_modules/buffer"
    },
    {
      "from": "node_modules/content-disposition",
      "to": "node_modules/content-disposition"
    },
    {
      "from": "node_modules/cross-env",
      "to": "node_modules/cross-env"
    },
    {
      "from": "node_modules/decompress",
      "to": "node_modules/decompress"
    },
    {
      "from": "node_modules/eventemitter3",
      "to": "node_modules/eventemitter3"
    },
    {
      "from": "node_modules/ext-name",
      "to": "node_modules/ext-name"
    },
    {
      "from": "node_modules/extract-zip",
      "to": "node_modules/extract-zip"
    },
    {
      "from": "node_modules/file-type",
      "to": "node_modules/file-type"
    },
    {
      "from": "node_modules/filenamify",
      "to": "node_modules/filenamify"
    },
    {
      "from": "node_modules/fs-extra",
      "to": "node_modules/fs-extra"
    },
    {
      "from": "node_modules/get-stream",
      "to": "node_modules/get-stream"
    },
    {
      "from": "node_modules/got",
      "to": "node_modules/got"
    },
    {
      "from": "node_modules/gulp",
      "to": "node_modules/gulp"
    },
    {
      "from": "node_modules/json-bigint",
      "to": "node_modules/json-bigint"
    },
    {
      "from": "node_modules/jsonfile",
      "to": "node_modules/jsonfile"
    },
    {
      "from": "node_modules/lodash.isequal",
      "to": "node_modules/lodash.isequal"
    },
    {
      "from": "node_modules/make-dir",
      "to": "node_modules/make-dir"
    },
    {
      "from": "node_modules/minimist",
      "to": "node_modules/minimist"
    },
    {
      "from": "node_modules/node-fetch",
      "to": "node_modules/node_modules/node-fetch"
    },
    {
      "from": "node_modules/p-event",
      "to": "node_modules/p-event"
    },
    {
      "from": "node_modules/pify",
      "to": "node_modules/pify"
    },
    {
      "from": "node_modules/semver",
      "to": "node_modules/semver"
    },
    {
      "from": "node_modules/shelljs",
      "to": "node_modules/shelljs"
    },
    {
      "from": "node_modules/ts-interface-checker",
      "to": "node_modules/ts-interface-checker"
    },
    {
      "from": "node_modules/winston",
      "to": "node_modules/winston"
    },
    {
      "from": "node_modules/yuv-buffer",
      "to": "node_modules/yuv-buffer"
    },
    {
      "from": "node_modules/yuv-canvas",
      "to": "node_modules/yuv-canvas"
    },
    {
      "from": "node_modules/bignumber.js",
      "to": "node_modules/bignumber.js"
    }
  ],
  "nodeGypRebuild": false
}
