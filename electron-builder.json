{
  "appId": "com.allendigital.astra",
  "productName": "Astra",
  "directories": {
    "output": "dist-electron-builder",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "assets/installer/**/*",
    "!**/*.d.ts",
    "!**/*.map",
    "!**/*.ts",
    "!**/*.md",
    "!**/*.log",
    "!**/*.test.*",
    "!**/*.spec.*",
    "!**/test/**",
    "!**/tests/**",
    "!**/__tests__/**",
    "!**/.git/**",
    "!**/.github/**",
    "!**/.vscode/**",
    "!**/.idea/**",
    "!**/coverage/**",
    "!**/docs/**",
    "!**/examples/**",
    "!**/scripts/**",
    "!**/build/**",
    "!**/out/**",
    "!**/node_modules/**",
    "!**/src/**"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "requestedExecutionLevel": "asInvoker",
    "icon": "assets/icons/win/icon.ico",
    "artifactName": "${productName}-${version}.${ext}",
    "publisherName": "Allen Digital",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Astra",
    "perMachine": false,
    "deleteAppDataOnUninstall": true,
    "include": "assets/installer/installer.nsh",
    "installerIcon": "assets/icons/win/icon.ico",
    "uninstallerIcon": "assets/icons/win/icon.ico",
    "installerHeaderIcon": "assets/icons/win/icon.ico",
    "artifactName": "${productName}-${version}-setup.${ext}",
    "uninstallDisplayName": "Astra",
    "runAfterFinish": true,
    "menuCategory": "Astra",
    "allowElevation": true,
    "installerSidebar": "assets/icons/win/icon.ico",
    "uninstallerSidebar": "assets/icons/win/icon.ico",
    "installerHeader": "assets/icons/win/icon.ico",
    "installerLanguages": ["en"],
    "warningsAsErrors": false,
    "multiLanguageInstaller": false,
    "displayLanguageSelector": false
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icons/mac/icon.icns",
    "artifactName": "${productName}-${version}-mac.${ext}",
    "category": "public.app-category.productivity",
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "notarize": false,
    "extendInfo": {
      "CFBundleDisplayName": "Astra",
      "CFBundleExecutable": "Astra",
      "CFBundleIdentifier": "com.allendigital.astra",
      "CFBundleInfoDictionaryVersion": "6.0",
      "CFBundleName": "Astra",
      "CFBundlePackageType": "APPL",
      "CFBundleShortVersionString": "0.0.1",
      "CFBundleVersion": "0.0.1",
      "LSMinimumSystemVersion": "10.15.0",
      "NSCameraUsageDescription": "This app requires camera access for streaming",
      "NSMicrophoneUsageDescription": "This app requires microphone access for streaming",
      "NSAppleEventsUsageDescription": "This app needs access to Apple events",
      "NSSystemAdministrationUsageDescription": "This app needs to capture the screen",
      "NSDesktopFolderUsageDescription": "Access to desktop may be needed for screen recording",
      "NSDocumentsFolderUsageDescription": "Access to documents may be needed",
      "NSDownloadsFolderUsageDescription": "Access to downloads may be needed",
      "NSHighResolutionCapable": true,
      "NSRequiresAquaSystemAppearance": false,
      "LSUIElement": false,
      "LSApplicationCategoryType": "public.app-category.productivity"
    }
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icons/png/512x512.png",
    "artifactName": "${productName}-${version}-linux.${ext}",
    "category": "Utility"
  },
  "publish": {
    "provider": "github",
    "owner": "dinesh-kumar-allen",
    "repo": "astra-electron",
    "private": false,
    "releaseType": "release"
  },
  "forceCodeSigning": false,
  "asar": false,
  "compression": "maximum",
  "removePackageScripts": true,
  "removePackageKeywords": true,
  "extraResources": [
    {
      "from": ".env.local",
      "to": ".env.local"
    }
  ],
  "nodeGypRebuild": false,
  "buildDependenciesFromSource": false
}
